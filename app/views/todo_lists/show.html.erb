<h2 class="todo_list_title">
  <%= @todo_list.title %>
</h2>
<p class="todo_list_sub_title">
  <%= @todo_list.description %>
</p>

<div id="todo_items_wrapper">
  <%= render partial: 'shared/todo_item', collection: @todo_list.todo_items %>
  <div id="form">
    <%= render 'shared/item_form' %>
  </div>
</div>

<div class="links">
  <%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
  <%= link_to 'Delete', todo_list_path(@todo_list),
                        method: :delete, data: { confirm: "Are you sure?" } %> |
  <%= link_to 'Back', todo_lists_path %>
</div>
